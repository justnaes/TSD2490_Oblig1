@page "/"
@using System.Timers

<PageTitle>Index</PageTitle>

<h1>TSD2490 - Oblig1</h1>

<style>
    .container {
        width: 400px;
    }

    button {
        width: 100px;
        height: 100px;
        font-size: 50px;
    }
</style>

<div class "container">
    <div class="row">
        @for (var animalNumber = 0; animalNumber < shuffledEmojis.Count; animalNumber++)
        {
            var animal = shuffledEmojis[animalNumber];
            var uniqueDescription = $"Button #{animalNumber}";
            <div class="col-3">
                <button @onclick="@(() => ButtonClick(animal, uniqueDescription))"
                   type="button" class ="btn btn-outline-dark">
                    <h1>@animal</h1>
                </button>
            </div>
        }
    </div>
    <div class ="row">
        <h2>Matches found: @matchesFound</h2>
    </div>
    <div class ="row">
        <h2>Time: @timeDisplay</h2>
    </div>
    <div>
        <button @onclick="@(() => restart())"
            id="retry" type="button" class ="btn btn-outline-dark" style="width: 400px; height: 50px">
            Restart game
        </button>
    </div> 
</div>

@code {
    List<string> animalEmojis = new List<string>()
    {
        "🐶", "🐶",
        "🐘", "🐘",
        "🐼", "🐼",
        "🐵", "🐵",
        "🐗", "🐗",
        "🐷", "🐷",
        "🐴", "🐴",
        "🦊", "🦊",
    };

    List<string> animal2Emojis = new List<string>()
    {
        "🐰", "🐰",
        "🐨", "🐨",
        "🦨", "🦨",
        "🦥", "🦥",
        "🐪", "🐪",
        "🦛", "🦛",
        "🦃", "🦃",
        "🦢", "🦢",
    };

    List<string> foodEmojis = new List<string>()
    {
        "🍋", "🍋",
        "🥥", "🥥",
        "🥑", "🥑",
        "🍆", "🍆",
        "🍄", "🍄",
        "🥐", "🥐",
        "🍔", "🍔",
        "🥚", "🥚",
    };


    public List<string> pickEmojis()
    {
        Random random = new Random();
        int randomIndex = random.Next(0, 3);

        if(randomIndex == 0)
        {
            return animalEmojis;
        }
        else if(randomIndex == 1)
        {
            return animal2Emojis;
        }
        else if(randomIndex == 2)
        {
            return foodEmojis;
        }
        else
        {
            Console.WriteLine("Error i valg av emojiliste");
            return null;
        }
    }

    List<string> shuffledEmojis = new List<string>();
    int matchesFound = 0;
    Timer timer;
    int tenthsOfSecondsElapsed = 0;
    string timeDisplay;
    int duration = 0;

    protected override void OnInitialized()
    {
        timer = new Timer(100);
        timer.Elapsed += Timer_Tick;

        SetUpGame();
    }
    private void SetUpGame()
    {
        Random random = new Random();
        shuffledEmojis = pickEmojis()
            .OrderBy(item => random.Next())
            .ToList();
        if(shuffledEmojis == null)
        {
            restart();
        }
        matchesFound = 0;
        tenthsOfSecondsElapsed = 0;
    }

    string lastAnimalFound = string.Empty;
    string lastDescription = string.Empty;

    private void ButtonClick(string animal, string animalDescription)
    {
        if (lastAnimalFound == string.Empty)
        {
            // First selection of the pair. Remember it.
            lastAnimalFound = animal;
            lastDescription = animalDescription;

            timer.Start();
        }
        else if ((lastAnimalFound == animal) && (animalDescription != lastDescription))
        {
            // Match found! Reset for the next pair.
            lastAnimalFound = string.Empty;

            // Replace found animals with empty string to hide them.
            shuffledEmojis = shuffledEmojis
                .Select(a => a.Replace(animal, string.Empty))
                .ToList();
            matchesFound++;
            if (matchesFound == 8)
            {
                timer.Stop();
                timeDisplay += " - Play Again? Press any of the emojis or the restart game button.";

                SetUpGame();
            }
        }
        else
        {
            // User selected a pair that don't match.
            // Reset selection.
            lastAnimalFound = string.Empty;
        }
    }

    private void Timer_Tick(Object source, ElapsedEventArgs e)
    {
        InvokeAsync(() =>
        {
            if(tenthsOfSecondsElapsed < 200)
            {
                tenthsOfSecondsElapsed++;
                timeDisplay = (20 - tenthsOfSecondsElapsed / 10F)
                    .ToString("0.0s");
                StateHasChanged();

            }
            else
            {
            
            StateHasChanged();
                timer.Stop();
            }
        });
    }

    private void restart()
    {
        SetUpGame();
        timer.Start();
    }
}
